&GLOBAL
  PROJECT cp2k
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL LOW
  SAVE_MEM
  SEED 1
&END GLOBAL
&FORCE_EVAL
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  METHOD Quickstep
  &SUBSYS
    &KIND H
      ELEMENT	H
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
      MASS 1
    &END KIND
    &CELL
      A  5 0 0
      B  0 5 0
      C  0 0 5
    &END CELL
    &COORD
H 2.3 2.5 2.5
H 2.8 2.5 2.5
    &END COORD
  &END SUBSYS
  &DFT
    BASIS_SET_FILE_NAME  test_files/BR
    POTENTIAL_FILE_NAME  test_files/GR
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &MGRID
      NGRIDS 4
      CUTOFF 360
      REL_CUTOFF 60
    &END MGRID
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 300
      ADDED_MOS 20
      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING  T
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
      &SMEAR ON
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE [K] 300
      &END SMEAR
    &END SCF
  &END DFT
&END FORCE_EVAL
