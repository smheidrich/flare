&GLOBAL
  PROJECT cp2k
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL LOW
  SAVE_MEM
  SEED 1
&END GLOBAL
&FORCE_EVAL
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  METHOD Quickstep
  &SUBSYS
    &KIND Al
      ELEMENT	Al
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q3
      MASS 1
    &END KIND
    &CELL
      A 7.8 0.0 0.0
      B 0.0 3.9 0.0
      C 0.0 0.0 3.9
    &END CELL
    &COORD
  Al 0.10000 0.10000 0.10000
  Al 0.00000 1.95000 1.95000
  Al 1.95000 0.00000 1.95000
  Al 1.95000 1.95000 0.00000
  Al 3.90000 0.10000 0.10000
  Al 3.90000 1.95000 1.95000
  Al 5.85000 0.00000 1.95000
  Al 5.85000 1.95000 0.00000
    &END COORD
  &END SUBSYS
  &DFT
    BASIS_SET_FILE_NAME  test_files/BR
    POTENTIAL_FILE_NAME  test_files/GR
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &MGRID
      NGRIDS 4
      CUTOFF 360
      REL_CUTOFF 60
    &END MGRID
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &KPOINTS
      SCHEME MONKHORST-PACK 2 4 4
      SYMMETRY OFF
      FULL_GRID .TRUE.
    &END KPOINTS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 300
      ADDED_MOS 20
      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING  T
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
      &SMEAR ON
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE [K] 300
      &END SMEAR
    &END SCF
  &END DFT
&END FORCE_EVAL
